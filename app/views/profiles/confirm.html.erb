<div class="d-flex flex-column">
  <div class="form-group">
    <label for="email"><%= Profile.human_attribute_name(:email) %></label>
    <%= @profile.email %>
  </div>
  <div class="form-group">
    <label for="email"><%= Profile.human_attribute_name(:prefecture) %></label>
    <%= @profile.prefecture.name %>
  </div>
  <div class="form-group">
    <label for="city"><%= Profile.human_attribute_name(:city) %></label>
    <%= @profile.city %>
  </div>
  <div class="form-group">
    <label for="tell"><%= Profile.human_attribute_name(:tell) %></label>
    <%= @profile.tell %>
  </div>
  <div class="form-group">
    <label for="careers"><%= GameCareer.model_name.human %></label>
    <br>
    <% @profile.game_careers.each.with_index(1) do |c,i| %>
      <%= i %>番目: <%= c.name  unless c._destroy %>
      <br />
    <% end %>
  </div>  
  <div class="form-group">
    <label for="games"><%= PossessGame.model_name.human %></label>
    <% @profile.possess_games.each do |g| %>
      <%= g.game_console.name unless g._destroy %>
      <br />
    <% end %>
  </div>
  <%# = link_to 'キャンセル', :back, class: 'btn btn-secondary' %>
  <%= render 'submit', locals: {name: '戻る', class:'btn btn-secondary'}%>
  <%= render 'submit', locals: {name: '登録', class:'btn btn-primary'}%>
</div>
